<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.timotiushaniel.consumerapp">

    <uses-permission android:name="com.timotiushaniel.githubuser.READ_DATABASE" />
    <uses-permission android:name="com.timotiushaniel.githubuser.WRITE_DATABASE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUser">
        <activity
            android:name=".view.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.FavoriteActivity"
            android:label="Favorite Activity"
            android:theme="@style/Theme.GithubUser.NoActionBar" />
    </application>

    <queries>
        <package android:name="com.timotiushaniel.githubuser" />
    </queries>

</manifest>